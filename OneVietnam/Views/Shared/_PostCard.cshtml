@using Microsoft.AspNet.Identity
@using OneVietnam.Common
@model OneVietnam.Models.PostViewModel
<div class="grid-item">
    @{
        switch (Model.PostType)
        {
            case 4:

                <text>
                    <div class="ui fluid yellow  card">
                </text>
                break;  // Always break each case
            case 5:
                <text>
                    <div class="ui fluid olive  card">
                </text>
                break;
            case 6:
                <text>
                    <div class="ui fluid purple  card">
                </text>
                break;
            case 7:
                <text>
                    <div class="ui fluid orange  card">
                </text>
                break;
            case 8:
                <text>
                    <div class="ui fluid teal  card">
                </text>
                break;
            case 9:
                <text>
                    <div class="ui fluid red  card">
                </text>
                break;
            default:
                <text>
                    <div class="ui fluid  black card">
                </text>
                break;
        }
    }

    @{
        //TaiLM: Added
        if (Model.Status == false)
        {
            <div class="ui top attached grey label">Đã Đóng</div>
        }
        if (Model.Status == true && Model.PostType == (int)PostTypeEnum.AdminPost)
        {
            <div class="ui top attached red label">Thông báo</div>
        }
        if (Model.Illustrations != null && Model.Illustrations.Count > 0)
        {
            <div class="ui  image clickable">
                <img src="@Model.Illustrations[0].PhotoLink" class="visible content" />
            </div>
        }
    }
    <div class="content clickable ">
        <div class="meta">
            <span>  @Model.TimeInterval </span>
        </div>
        <div class="header ">
            @Model.Title
        </div>
        <div class="description ">
            @Model.Description
        </div>




        <input type="text" class="hides" id="postId" value="@Model.Id" />


    </div>
    <div class="extra content">
        <img class="ui avatar image" src="@Model.AvartarLink">
        <a href="@Url.Action("Index", "Timeline", new {Id = @Model.UserId})">@Model.UserName</a>
    </div>

</div>
</div>
