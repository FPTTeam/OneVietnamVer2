@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="item">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ui form" }))
        {
            @Html.AntiForgeryToken()
            <a href="@Url.Action("Index","Timeline",new {userId=User.Identity.GetUserId()})" id="txtHeaderUserName" style="color: white">
                <img class="ui avatar image" src="~/Content/Images/Avatar_Default.jpg" />
                <span>@User.Identity.GetUserName()&nbsp;</span>
            </a>
        }
        <div class="ui icon buttons">
            <div class="ui top right pointing dropdown button" style="background: rgba(0, 0, 0, 0); color: white" id="myConversations">
                <i class="comments large icon"></i>
                <div class="floating ui tiny red label" id="MessageNotification" style="display: none"></div>
                <div class="menu" id="Conversations">
                    <div class="item conversations">
                        <div>This content only for temp...</div>
                    </div>
                </div>
            </div>
            <div class="ui top right pointing dropdown button" id="myNotifications" style="background: rgba(0, 0, 0, 0); color: white">
                <i class="alarm large icon"></i>
                <div class="floating ui tiny teal label" id="NotificationsNo" style="display: none"></div>
                <div class="menu" id="Notifications">
                    <div class="item notifications" style="padding:0em!important">
                        <div>This content only for temp...</div>
                    </div>
                </div>
            </div>
            <div class="ui top right button" style="background: rgba(0, 0, 0, 0); color: white">
                <a href="javascript:document.getElementById('logoutForm').submit()" style="color: white">
                    <i class="power large icon"></i>
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="item">
        @Html.ActionLink("Đăng Nhập", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "ui fluid teal button" })
    </div>
    <div class="item">
        @Html.ActionLink("Đăng Ký", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "ui fluid teal button" })
    </div>
}
