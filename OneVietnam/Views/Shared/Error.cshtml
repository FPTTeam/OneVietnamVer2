<div class="ui grid">
    <div class="three wide column"></div>
    <div class="ten wide column">
        <div class="ui icon floating message">
            <i class="warning circle icon"></i>
            <div class="content">
                <div class="header">
                    Lỗi!
                </div>
                @{
                    if (String.IsNullOrEmpty(ViewBag.errorMessage))
                    {
                        <p>Đã có lỗi xảy ra trong quá trình thực hiện yêu cầu của bạn! OneVietnam sẽ khắc phục trong thời gian sớm nhất có thể. Chúng tôi rất tiếc vì sự cố này.</p>
                    }
                    else
                    {
                        <p>@ViewBag.errorMessage</p>
                    }
                }
            </div>

        </div>
    </div>
</div>


