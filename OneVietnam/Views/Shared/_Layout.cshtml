@using System

<!DOCTYPE html>
<html>
<head>
    <title>OneVietnam</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="/Images/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - OneVietNam</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
@*    @Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <!-- THE HEADER -->
    <header>
        <div class="container-fluid custom-container">
            <div class="row no_row row-header">
                <div class="brand-be">
                    <a href="@Url.Action("Index", "Home")" class="be_logo">
                        <img src="/Images/logo.png"  title="Anh Tài bảo sau này sẽ mua" alt="Homepage" />
                    </a>
                </div>
                <div class="header-menu-block">
                    <button class="cmn-toggle-switch cmn-toggle-switch__htx"><span></span></button>
                    <ul class="header-menu" id="one">                                          
                        <li class="active-header">
                            <a href="">Trang Chủ</a><i class="fa fa-angle-down"></i>
                        </li>
                        <li><a href="">Bảng Tin</a></li>
                    </ul>
                </div>
                <div class="login-header-block">
                    <div class="login_block">

                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </header>

<div id="content-block">    
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/theme")
@*    @RenderSection("scripts", required: false)*@
</body>
</html>
