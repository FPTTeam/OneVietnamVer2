 @model OneVietnam.Models.PostViewModel
 
     
         <div class="column"> 
             <div class="ui fluid card"> 
                 <div class="content"> 
                     <div class="header"> @Model.Title 
                          @if (Model.Status) 
                         { 
                             <div class="ui right floated green sub header"> 
                                 <i class="heartbeat icon"></i>
                                <div class="content">
                                    Đang hoạt động
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="ui right floated red header"></div>
                            <div class="content">
                                Đã đóng
                            </div>
                        }</div>
                    <div class="right floated meta"> </div>
                    <div class="meta">
                        <span>@Model.PublishDate</span>
                        <a>@Model.PostType</a>
                    </div>
                  
                </div>
                <div class="image">
                    <img src="~/Images/image.png">
                </div>

                <div class="content">
                    <h4 class="ui sub header">@Model.Title</h4>
                    <div class="description">
                        <p>@Model.Description</p>
                    </div>
                    <span class="right floated">

                        <script>
                    (function (d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0];
                        if (d.getElementById(id)) return;
                        js = d.createElement(s);
                        js.id = id;
                        js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.6";
                        fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));

                    //like button
                    document.write("<div class='fb-like' data-href='" +
                        window.location.href +
                        "' data-layout='button_count' data-action='like' data-size='small' data-show-faces='false' data-share='false'></div>");
                        </script>
                    </span>

                    <script>
                    //Comment
                    document.write("<div class='fb-comments' style='width: 100%' data-href='" +
                        window.location.href +
                        "' data-numposts='3' ></div>");
                    </script>
                </div>
             
            </div>
       </div>
   