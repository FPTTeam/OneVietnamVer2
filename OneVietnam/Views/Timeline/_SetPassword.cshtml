@model OneVietnam.Models.SetPasswordViewModel

@using (Ajax.BeginForm("SetPassword", "Timeline", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "ChangePasswordForm",
    OnSuccess = "closeSetPasswordForm"
}))
{


    <div class="ui form" style="padding-left: 2rem; padding-right: 2rem">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)       
        <div class="field">

            <label for="NewPassword">Mật khẩu mới</label>
            <input data-val="true" id="NewPassword" name="NewPassword" type="password">

        </div>
        <div class="field">

            <label for="ConfirmPassword">Xác nhận lại mật khẩu mới</label>
            <input data-val="true" id="ConfirmPassword" name="ConfirmPassword" type="password">

        </div>
        <div class="field" style="text-align: center">

            <input type="button" class="ui cancel button" value="Hủy" onclick="cancelSetPassword()">
            <input type="submit" class="ui teal button" value="Tạo">
        </div>
    </div>

}
