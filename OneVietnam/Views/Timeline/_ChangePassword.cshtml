@model OneVietnam.Models.ChangePasswordViewModel

@Html.AntiForgeryToken()
@Html.ValidationSummary()
<div class="ui selection list">
    <div class="ui item">
        @*@Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "input-error-message" })*@
        @Html.LabelFor(m => m.OldPassword)
        @Html.PasswordFor(m => m.OldPassword)
    </div>
    <div class="ui item">
        @*@Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "input-error-message" })*@
        @Html.LabelFor(m => m.NewPassword)
        @Html.PasswordFor(m => m.NewPassword)
    </div>
    <div class="ui item">
        @*@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "input-error-message" })*@
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword)
    </div>
    <div class="ui item">
        <input type="submit" value="Đổi" onclick="changePassword()" />
        <input type="submit" value="Hủy" onclick="cancelChangePassword()" />
    </div>
</div>










