@model OneVietnam.Models.ChangePasswordViewModel

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

@using (Ajax.BeginForm("ChangePassword", "Timeline", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "ChangePassword",
    //OnBegin = "ValidateForm",

    //OnSuccess = "onSuccess"
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)    
    <div class="ui selection list">
        <div class="ui item">

            <label for="OldPassword">Mật khẩu hiện tại</label>
            <input data-val="true" data-val-required="The Mật khẩu hiện tại field is required." id="OldPassword" name="OldPassword" type="password">
        </div>
        <div class="ui item">

            <label for="NewPassword">Mật khẩu mới</label>
            <input data-val="true" data-val-length="Mật khẩu mới phải chứa ít nhất 6 kí tự." data-val-length-max="100" data-val-length-min="6" data-val-required="The Mật khẩu mới field is required." id="NewPassword" name="NewPassword" type="password">
        </div>
        <div class="ui item">

            <label for="ConfirmPassword">Xác nhận lại mật khẩu mới</label>
            <input data-val="true" data-val-equalto="Mật khẩu mới và xác nhận lại mật khẩu không khớp với nhau." data-val-equalto-other="*.NewPassword" id="ConfirmPassword" name="ConfirmPassword" type="password">
        </div>
        <div class="ui item">
            <input type="submit" value="Đổi" @*onclick="changePassword()"*@>
            <input type="button" value="Hủy" onclick="cancelChangePassword()">
        </div>
    </div>

}

    

    
    














