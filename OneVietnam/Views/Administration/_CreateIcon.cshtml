@using OneVietnam.Models
@model OneVietnam.Models.CreateIconModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateIcon</title>
</head>
<body>
    @using (Html.BeginForm("CreateIcon", "Administration", FormMethod.Post, new { @class = "ui form" }))
    {
        @Html.AntiForgeryToken()


        <h4>CreateIconModel</h4>
            <hr />
            @Html.ValidationSummary(true, "")

            @Html.LabelFor(model => model.IconValue)

            @Html.EditorFor(model => model.IconValue, new { htmlAttributes = new { @class = "form-control" } })




            @Html.LabelFor(model => model.IconText)

            @Html.EditorFor(model => model.IconText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IconText, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.IconImage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IconImage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IconImage, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IconType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IconType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IconType, "")
                </div>
            </div>

            <div class="field">
                <input type="submit" value="Create" class="ui green button" />
            </div>
    }
</body>
</html>


